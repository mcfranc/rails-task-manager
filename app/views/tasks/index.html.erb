<div class="container">
  <div class="center-block">
    <h1>
      My tasks
    </h1>
    <% @tasks.each do |task| %>
        <div id="task">
          <span>
          <% if task.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task) %>
          <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </span>
        </div>
    <% end %>
    <hr>
    <div id="new-task">
      <span>
        <i class="fas fa-plus"></i>
        <%= link_to "Create a new task", new_path %>
      </span>
    </div>
  </div>
</div>

