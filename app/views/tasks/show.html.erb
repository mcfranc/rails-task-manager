<div class="container">
  <div class="center-block">

    <h2>
      <%= @task.title %>
    </h2>
    <div class="alert alert-secondary" role="alert">
      <%= @task.details %>
    </div>
    <p>
      <% if @task.completed %>
        <i class="far fa-check-square"></i> This task is completed
      <% else %>
        <i class="far fa-square"></i> This task is not yet completed
      <% end %>
    </p>

    <p>
      <%= link_to edit_path do %>
        <button type="button" class="btn btn-primary">Update</button>
      <% end %>
    </p>

    <p>
      <%= link_to "Back to tasks", tasks_path %>
    </p>
  </div>
</div>


